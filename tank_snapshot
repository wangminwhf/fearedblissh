SPATH="/usr/local/sbin"

# Takes a controlled snapshot of each dataset in the 'tank' pool
${SPATH}/zfs_snapshot \
	tank/gentoo/root \
	tank/gentoo/home \
	tank/gentoo/src \
	tank/gentoo/portage
