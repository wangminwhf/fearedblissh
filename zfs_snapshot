# The parameters passed to this script will be the datasets in the pool
# that you wish to snapshot.

# Example: # zfs_snapshot tank/gentoo/root tank/gentoo/home ...

# The snapshot will have a name like: tank/gentoo/root@04_21_13_1200

ZFS="/sbin/zfs"

if [[ $# -eq 0 ]]; then
	echo "You haven't passed a pool name. Exiting."
	exit
fi

while [ "$1" ]; do
	${ZFS} snapshot $1@$(date +%m_%d_%y_%H%M)
	shift
done
